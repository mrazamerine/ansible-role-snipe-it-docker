# --------------------------------------------
# REQUIRED: BASIC APP SETTINGS
# --------------------------------------------
APP_ENV=production
APP_DEBUG={{ snipeit_debug_mode }}
APP_KEY={{ snipeit_app_key }}
APP_URL=http://127.0.0.1:80
APP_TIMEZONE=US/Pacific
APP_LOCALE=en
#
#
# --------------------------------------------
# DATABASE SETTINGS
# --------------------------------------------
MYSQL_ROOT_PASSWORD={{ mysql_snipeit_root_password }}
MYSQL_DATABASE=snipeit
MYSQL_USER=snipeit
MYSQL_PASSWORD={{ mysql_snipeit_user_password }}
#
#
# --------------------------------------------
# OUTGOING MAIL SERVER SETTINGS
# --------------------------------------------
MAIL_PORT_587_TCP_ADDR={{ snipeit_mail_host }}
MAIL_PORT_587_TCP_PORT={{ snipeit_mail_port }}
MAIL_ENV_FROM_ADDR={{ snipeit_mail_from_address }}
MAIL_ENV_FROM_NAME={{ snipeit_mail_from_name }}
MAIL_ENV_ENCRYPTION={{ snipeit_mail_encryption }}
# SMTP username and password
MAIL_ENV_USERNAME={{ snipeit_mail_username }}
MAIL_ENV_PASSWORD={{ snipeit_mail_password }}
